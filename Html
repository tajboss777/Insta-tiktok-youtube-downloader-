<body>
  <h1>InstaTubeTok Downloader</h1>
  <p>Download MP3 or videos from YouTube, TikTok & Instagram</p>
  <input type="text" id="urlInput" placeholder="Paste video URL here" />
  <div class="buttons">
    <button onclick="download('mp3')">Download MP3</button>
    <button onclick="download('video')">Download Video</button>
    <button onclick="download('hd')">Download HD Video</button>
  </div>

  <script>
    function download(type) {
      const url = document.getElementById("urlInput").value;
      if (!url) return alert("Please enter a URL");
      window.open(`https://YOUR_NGROK_URL/download?url=${encodeURIComponent(url)}&type=${type}`);
    }
  </script>
