<body>
  <h1>InstaTubeTok Downloader</h1>
  <input type="text" id="urlInput" placeholder="Paste your video URL here" />

  <div class="buttons">
    <button onclick="download('mp3')">Download MP3</button>
    <button onclick="download('video')">Download Normal Video</button>
    <button onclick="download('hd')">Download HD Video</button>
  </div>

  <script>
    function download(type) {
      const url = document.getElementById("urlInput").value;
      if (!url) return alert("Please paste a video URL.");
      window.open(`https://YOUR_NGROK_URL/download?url=${encodeURIComponent(url)}&type=${type}`, '_blank');
    }
  </script>
